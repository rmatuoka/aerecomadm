<% if flash[:msg] %>
<div id="mensagem">
	<h2><%=flash[:msg]%></h2>
</div>
<% end %>

<% form_for ([:admin, @Print], :html => { :multipart => :true }) do |f| %>
	<%=f.error_messages%>
	<label>
		Nome da Impressora:<br>
		<%=f.text_field :title %><br>
	</label><br><br>
	
	<label>
		Resumo:<br>
		<%=f.text_field :summary, :maxlength => 100 %><br>
	</label><br><br>
	
	<label>
		Descrição:<br>
		<%=f.text_area :description, :class => "mceEditor"  %><br>
	</label><br><br>
	
	<label>
		Imagem:<br>
		<%=f.file_field :image %><br>
	</label><br><br>
	
	<label>
		Publicado?<br>
		<%=f.radio_button :published, 0 %> NÃ£o
		<%=f.radio_button :published, 1 %> Sim  
	</label><br><br>
	
	<button type="submit">Salvar</button>
<% end %>
